issn = {0308597X},
journal = {Marine Policy},
keywords = {Antarctica,CCAMLR,Ecosystem based fishery management,Fisheries,International environmental law,Marine protected areas,Rational use,Southern Ocean},
pages = {28--34},
publisher = {Elsevier},
title = {{'Rational use' in Antarctic waters}},
url = {http://dx.doi.org/10.1016/j.marpol.2015.09.031},
volume = {63},
year = {2016}
}
