issn = {22967745},
journal = {Frontiers in Marine Science},
keywords = {Abundance,Climate change,Demography,Ocean acidification,Phenology,Range shifts},
mendeley-groups = {DOCAS,DOCAS/Ensayo{\_}CC},
number = {MAY},
pages = {1--21},
title = {{Responses of marine organisms to climate change across oceans}},
volume = {3},
year = {2016}
}
